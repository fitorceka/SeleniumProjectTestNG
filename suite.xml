<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Test Suite">
    <test name="Admin Tests" preserve-order="true">
        <classes>
            <class name="tests.AdminTests">
                <methods>
                    <include name="checkAdminCorrectLogin"/>
                    <include name="checkTotalCompletedOrdersAndTotalProfit"/>
                    <include name="checkTotalRegisteredUsers"/>
                    <include name="checkDisplayOfStatisticsBoxes"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="User Tests" preserve-order="true">
        <classes>
            <class name="tests.UserTests">
                <methods>
                    <include name="checkSuccessfulLoginAndItemsNotAvailable"/>
                    <include name="checkFooterLinksAndEmptyCartText"/>
                    <include name="checkShoppingCartByAddingAndRemovingItems"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>